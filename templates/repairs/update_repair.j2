<html>
    <script language="JavaScript">
        function browseRepairs() {
            location.href = "/repairs";
        };
    </script> 
    <div id="update">

        <form method="POST" id="updateRepair">
            <legend><strong>Update Repair</strong></legend>
              <fieldset class="fields">
              <input type="hidden" name="repairID" id="updateRepairID" value="1">
              <label><b> Repair ID: {{repair_id}}</b></label> 
              <p></p>
                <label> Removal ID: </label>  <select name="removal_id">
                    <option>{{removal_id['id_removal']}}</option>
                        {% for removal in removal_ids %}
                        <option value="{{removal['id_removal']}}">{{removal['id_removal']}}</option>
                        {% endfor %}
                </select>
                <label> Date Recieved: </label> <input type="date" name="recieved", value={{recieved}}>
                <label> Supplier: </label> <input type="text" name="supplier", value={{supplier}}>
                <label> Price: </label> <input type="text" name="price", value={{price}}>
                <label> Date Completed: </label> <input type="date" name="completed", value={{completed}}>
          </fieldset>
              <input class="btn" type="submit" id="UpdateSaveRepair" value="Save Update">
              <input class="btn" type="button" value="Cancel" onClick="browseRepairs()">
        </form> 
    </div>
</html>